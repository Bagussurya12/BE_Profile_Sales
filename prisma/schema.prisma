generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id @default(uuid())
  fullname         String
  email            String          @unique
  password         String
  status           String?
  nick_name        String          @unique
  level            String
  profile          Profile?
  houses           House[]
  articles         Article[] 

}

model Profile {
  id             String          @id @default(uuid())
  userId         String          @unique
  fullName       String
  dateOfBirth    DateTime?
  gender         String?
  address        String?
  profilePhoto   String?
  bio            String?
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
  user           User            @relation(fields: [userId], references: [id])
  socialMedia    SocialMedia?

}

model SocialMedia {
  id        String   @id @default(uuid())
  profileId String?  @unique
  facebook  String?
  twitter   String?
  instagram String?
  linkedin  String?
  whatsApp   String?
  tiktok    String?
  profile   Profile? @relation(fields: [profileId], references: [id])
}

model House {
  id                 String         @id @default(uuid())
  userId             String?
  title              String?
  harga              String?
  tipe_rumah         String?
  luas_tanah         String?
  luas_bangunan      String?
  jumlah_kamar_tidur Int?
  jumlah_kamar_mandi Int?
  deskripsi          String?
  spesifikasi        String?
  gambar             HousePicture[]
  user               User?          @relation(fields: [userId], references: [id])
}

model HousePicture {
  id         String @id @default(uuid())
  houseId    String
  gambar_url String
  house      House  @relation(fields: [houseId], references: [id])
}

model Article {
  id        String   @id @default(uuid())
  userId    String?
  title     String
  photos    String? // Menggunakan array of strings untuk menyimpan path foto
  content   String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}