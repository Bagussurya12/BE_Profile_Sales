generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  fullname  String
  email     String   @unique
  password  String
  status    String?
  nick_name String   @unique
  level     String
  profile   Profile?
}

model Profile {
  id           String       @id
  userId       String       @unique
  fullName     String
  dateOfBirth  DateTime?
  gender       String?
  address      String?
  profilePhoto String?
  bio          String?
  created_at   DateTime     @default(now())
  updated_at   DateTime     @updatedAt
  user         User         @relation(fields: [userId], references: [id])
  socialMedia  SocialMedia? 
}

model SocialMedia {
  id        String  @id
  profileId String?  @unique
  facebook  String?
  twitter   String?
  instagram String?
  linkedin  String?
  youtube   String?
  profile   Profile? @relation(fields: [profileId], references: [id])
}
